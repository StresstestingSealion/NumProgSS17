CC = gcc

CFLAGS = -Wall -Werror \
	 -O3 -funroll-loops -march=native -mtune=native \
         -std=c99

all: p3_comparisonlr

basic.o: basic.c basic.h
	$(CC) -c $(CFLAGS) $< -o $@ 

miniblas.o: miniblas.c miniblas.h basic.h
	$(CC) -c $(CFLAGS) $< -o $@ 

matrix.o: matrix.c matrix.h miniblas.h
	$(CC) -c $(CFLAGS) $< -o $@ 

p3_comparisonlr: p3_comparisonlr.o basic.o miniblas.o matrix.o
	$(CC) $(CFLAGS) $^ -o $@ -lwinmm

p3_comparisonlr.o: p3_comparisonlr.c matrix.h
	$(CC) $(CFLAGS) -c $< -o $@



